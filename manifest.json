{
  "manifest_version": 3,
  "name": "Bhaws Chat Extension",
  "version": "1.0",
  "description": "Chat Bot Extension for PDPs on saatva.com",
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": ["https://www.saatva.com/*"],
  "action": {
    "default_title": "Bhaws Chat Extension"
  },
  "content_security_policy": {
    "script-src": ["self"],
    "object-src": ["self"]
  },
  "permissions": ["sidePanel", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.saatva.com/*"],
      "js": ["scraper.js","content.js"]
    }
  ],
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}